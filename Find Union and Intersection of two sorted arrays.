// Question:- Find Union and Intersection of two sorted arrays.
import java.util.*;
public class Main{
    static void unionOfTwoArrays(int[] arr1, int[] arr2){
        Arrays.sort(arr1);
        Arrays.sort(arr2);
        int i = 0;
        int j = 0;
        List<Integer> res = new ArrayList<>();
        while(i<arr1.length || j<arr2.length){
            //skip duplicate
            while(i > 0 && i < arr1.length && arr1[i] == arr1[i-1]){
                i++;
            }
            while(j > 0 && j < arr1.length && arr1[j] == arr1[j-1]){
                j++;
            }
            
            //if any of the array is finished then
            if(i >= arr1.length){
                res.add(arr2[j]);
                j++;
                continue;
            }
            
            if(j >= arr2.length){
                res.add(arr1[i]);
                i++;
                continue;
            }
            
            //comparison
            if(arr1[i] < arr2[j]){
                res.add(arr1[i]);
                i++;
            }else if(arr1[i] > arr2[j]){
                res.add(arr2[j]);
                j++;
            }else{
                res.add(arr1[i]);
                i++;
                j++;
            }
        }
        System.out.println(res);
    }
    
    static void intersectionOfTwoArrays(int[] arr1, int[] arr2){
        Arrays.sort(arr1);
        Arrays.sort(arr2);
        int i = 0;
        int j = 0;
        List<Integer> result = new ArrayList<>();
        while(i < arr1.length && j < arr2.length){
            while(i > 0 && i < arr1.length && arr1[i] == arr1[i-1]){
                i++;
            }
            while(j > 0 && j < arr1.length && arr1[j] == arr1[j-1]){
                j++;
            }
            
            if(i >= arr1.length){
                break;
            }
            if(j >= arr2.length){
                break;
            }
            
            if(arr1[i] == arr2[j]){
                result.add(arr1[i]);
                i++;
                j++;
            }else{
                i++;
                j++;
            }
        }
        System.out.println(result);
    }
    public static void main(String[] args){
        int arr1[] = new int[]{1,2,-3,-4,5};
        int arr2[] = new int[]{-3,-4,1,2,6};
        unionOfTwoArrays(arr1,arr2);
        intersectionOfTwoArrays(arr1,arr2);
    }
}
